<job group='rhel-edge'>
  <whiteboard>Provisioned for {{ arch }} github action runner</whiteboard>
  <recipeSet>
    <recipe kernel_options="" kernel_options_post="" ks_meta="" role="None" whiteboard="">
      <autopick random="false"/>
      <watchdog panic="None"/>
      <packages/>
      <ks_appends>
        <ks_append><![CDATA[
user --name=admin --groups=wheel --iscrypted --password=$6$1LgwKw9aOoAi/Zy9$Pn3ErY1E8/yEanJ98evqKEW.DZp24HTuqXPJl6GYCm8uuobAmwxLv7rGCvTRZhxtcYdmC0.XnYRSR9Sh6de3p0
sshkey --username=admin "ssh-rsa  ostree-image-test"
%post
echo -e 'admin\tALL=(ALL)\tNOPASSWD: ALL' >> /etc/sudoers
%end
        ]]></ks_append>
      </ks_appends>
      <repos/>
      <distroRequires>
        <and>
          <distro_name op="=" value="{{ distro_name }}"/>
          <distro_arch op="=" value="{{ arch }}"/>
        </and>
      </distroRequires>
      <hostRequires>
        <and>
          <arch op="=" value="{{ arch }}"/>
{% if cloud_profile == "beaker" %}
          <hypervisor op="=" value=""/>
          <cpu_count op=">=" value="16"/>
          <memory op=">=" value="48000"/>
{% endif %}
{% if cloud_profile == "beaker-vm" %}
          <cpu_count op=">=" value="4"/>
          <memory op=">=" value="4096"/>
{% endif %}
        </and>
      </hostRequires>
      <partitions/>
      <task name="/distribution/check-install" role="STANDALONE"/>
      <task name="/distribution/reservesys" role="STANDALONE"/>
    </recipe>
  </recipeSet>
</job>
